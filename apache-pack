#!/usr/bin/env bash

TAR_FILE=tkdo-$(git describe --tags --dirty).tar

function echec {
  code=$?
  [ -f $TAR_FILE ] && rm -f $TAR_FILE
  [ -f $TAR_FILE.gz ] && rm -f $TAR_FILE.gz
  exit $code
}

# Construction
./build || echec

# Fichiers communs
tar -cvf $TAR_FILE -C apache .

# Fichiers front
tar -rvf $TAR_FILE -C front/dist/tkdo-front/browser .

# Fichiers api-v1
tar -rvf $TAR_FILE --transform='s/\.prod$//' \
  ./api-v1/bin \
  ./api-v1/public \
  ./api-v1/src \
  ./api-v1/var/auth/*.prod \
  ./api-v1/var/cache/.gitignore \
  ./api-v1/var/doctrine/{cache,proxy}/.gitignore \
  ./api-v1/vendor \
  ./api-v1/.env.prod \
  ./api-v1/*.php \
  ./api-v1/composer.{json,lock,phar}

# Finalisation
gzip -f $TAR_FILE
